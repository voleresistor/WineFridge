@model WineFridge.ViewModels.WineViewModel
@{
    ViewData["Title"] = "Add a new wine";
}

<h2>Add a new wine</h2>

<form asp-controller="Wine" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="TypeID"></label>
        <select asp-for="TypeID" asp-items="Model.Types"></select> <a asp-controller="WineType" asp-action="Add">Add type</a>
        <span asp-validation-for="TypeID"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input class="form-control" asp-for="Notes" />
        <span asp-validation-for="Notes"></span>
    </div>

    <div class="form-group">
        <label asp-for="WineryID"></label>
        <select asp-for="WineryID" asp-items="Model.Wineries"></select> <a asp-controller="Winery" asp-action="Add">Add winery</a>
        <span asp-validation-for="WineryID"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" asp-items="Model.Ratings"></select>
        <span asp-validation-for="Rating"></span>
    </div>

    <input type="submit" value="Add Wine" />
</form>
