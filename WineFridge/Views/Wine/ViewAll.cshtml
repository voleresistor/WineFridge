@model List<WineFridge.ViewModels.WineViewModel>

@{
    ViewData["Title"] = "View All Wines";
}

<h2>All Wines</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number in Stock</th>
        </tr>

        @foreach (var wine in Model)
        {
            <tr>
                <td><a asp-controller="Wine" asp-action="ViewWine" asp-route-id="@wine.WineID">@wine.Name</a></td>
                <td>@wine.Description</td>
                <td>@wine.Count</td>
            </tr>
        }
    </table>
}
else
{
    <p>No wines in database yet!</p>
}

<p><a asp-controller="Wine" asp-action="Add">Add a wine</a>