@model WineFridge.ViewModels.WineViewModel
@{
    ViewData["Title"] = "Edit wine " + @Model.Name;
}

<h2>Edit wine: @Model.Name</h2>

<form asp-controller="Wine" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="TypeID"></label>
        <select asp-for="TypeID" asp-items="Model.Types"></select> <a asp-controller="WineType" asp-action="Add">Add type</a>
        <span asp-validation-for="TypeID"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input class="form-control" asp-for="Notes" />
        <span asp-validation-for="Notes"></span>
    </div>

    <div class="form-group">
        <label asp-for="WineryID"></label>
        <select asp-for="WineryID" asp-items="Model.Wineries"></select> <a asp-controller="Winery" asp-action="Add">Add winery</a>
        <span asp-validation-for="WineryID"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" asp-items="Model.Ratings"></select>
        <span asp-validation-for="Rating"></span>
    </div>

    <div>
        <a asp-controller="Wine" asp-action="Remove" asp-route-id="@Model.WineID" onclick="return confirm('Really remove this wine from the database?')">Remove wine</a>
    </div>

    <br />
    <input type="hidden" asp-for="WineID" value="@Model.WineID" />
    <input type="submit" value="Edit Wine" />
</form>
