@model List<WineFridge.ViewModels.WineTypeViewModel>
@{
    ViewData["Title"] = "Wine Types";
}

<h2>Wine Types</h2>

@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>

        @foreach (var wt in Model)
        {
            <tr>
                <td>@wt.Name</td>
                <td>@wt.Description</td>
            </tr>
        }
    </table>
}
else
{
<p>No wine types in the database yet!</p>
}

<p><a asp-controller="WineType" asp-action="Add">Add</a></p>